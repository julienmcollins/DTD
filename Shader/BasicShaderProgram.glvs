#version 330 core

//Transformation Matrices
uniform mat4 projection_matrix;
uniform mat4 modelview_matrix;

// Input variables
layout (location = 0) in vec2 vertex_pos_2D;
layout (location = 1) in vec2 tex_coord;

// Output variables
out vec2 TextureCoordinates;

void main()
{
	//Process texCoord
	TextureCoordinates = tex_coord;
	
	//Process vertex
	gl_Position = projection_matrix * modelview_matrix * vec4( vertex_pos_2D.x, vertex_pos_2D.y, 0.0, 1.0 );
}